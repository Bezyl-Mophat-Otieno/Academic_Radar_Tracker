<!-- setSkill Modal -->
<div class="modal fade" id="setSkill" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">


          <div class="home_icon ">
            <i class="fa-solid fa-ranking-star fa-3x"></i>
          </div>

            <div class="container">

                
                <form   action="/api/skill" method="POST" > 
                
                
                
                <div  class="form-group ">

              
                  <div class="">
                    <label for="status" id="category" class="form-label">Category</label>
                  </div>
                    <div>
                      <select name="status" id="status">
                        <option value="career-oriented" selected >Career-Oriented</option>
                        <option value="persona-oriented">Persona-Oriented</option>
                      </select>
                    </div>
                    <div>
                      <textarea class="form-control" name="text" id="text" rows="2"></textarea>
                    </div>
                    
                  
                </div>
                
            
                    <div class=" d-flex ">
                  <div class="flex-fill">
                    <input  type="submit" class=" btn btn-outline-secondary w-20 " id="submit"   value="ADD SKILL">
                  </div>
                
                
                </div>
                </form>      
                </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
  
