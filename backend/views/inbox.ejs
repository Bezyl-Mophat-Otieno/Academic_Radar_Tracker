 <div class="">
   <div class="row row-cols-1 row-cols-md-2">
   
     <%if(myMessages.length > 0){ %>
      <%myMessages.forEach((message)=>{ %>
       
   
       <%- include('./partials/mailModal.ejs') %> 
       <div class="col  gx-1">
        <div>
          <a href="#sendMail" data-bs-toggle="modal" class="card skill__card mb-5 mt-5 shadow rounded m-auto skill__link ">
            <div class="card-body rounded">
              <h5 class="card-title text-muted"> <b class="h5 font-weight-light text-monospace text-success">From:</b><%- message.from %>  </h5>
              <hr class="dropdown-divider">
              <p class="card-text"> <%- message.message %></p>
              
              
              
               <a  href="#sendMail" data-bs-toggle="modal" class="btn btn-outline-success rounded-pill m-auto"><i class="fas fa-edit"></i></a> 
             
    
               <form action="/messaging/delete/<%- message._id %> " method="POST" id="delete-form">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="btn btn-outline-danger rounded-pill " >
                      <i class="fas fa-trash"></i>
                  </button>
                </form>
             </div>
           </a>

        </div>
      </div>
      
   
   <%});%>
   <% }else {%>
   
     <h1 class="btn btn-outline-secondary rounded-pill shadow mb-5 mt-5 text-align-center w-100  " >No Messages...</h1>
     
   
     <% } %>
   </div>


 </div>


